# Smiley's Blog Environment Configuration - EXAMPLE FILE
# Copy this to .env and customize the values for your deployment

# =============================================================================
# CORE APPLICATION SETTINGS
# =============================================================================

SECRET_KEY=generate-a-secure-secret-key-here
FLASK_ENV=development
PORT=5000

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================

DATABASE_URL=sqlite:///instance/site.db

# =============================================================================
# FILE UPLOAD SETTINGS
# =============================================================================

UPLOAD_FOLDER=static/uploads

# =============================================================================
# ADMIN USER SETUP (Optional)
# =============================================================================

ADMIN_USER=admin
ADMIN_PASSWORD=change-this-password

# =============================================================================
# EMAIL CONFIGURATION (Optional)
# =============================================================================

# SENDGRID_API_KEY=your-sendgrid-api-key-here
# NEWSLETTER_FROM_EMAIL=noreply@yourdomain.com
# NEWSLETTER_FROM_NAME=Your Blog Name

# =============================================================================
# SEO AND SITE CONFIGURATION
# =============================================================================

SEO_SITE_URL=https://yourdomain.com
SEO_SITE_NAME=Smiley's Blog
SEO_SITE_DESCRIPTION=Short essays and practical tips about wealth, health & happiness
BASE_URL=http://localhost:5000

# =============================================================================
# OPTIONAL TWITTER INTEGRATION
# =============================================================================

# SEO_TWITTER_HANDLE=@your_twitter_handle


# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================

# Rate Limiting
# Limits the number of requests from a single IP address to prevent brute force attacks
# Default: 5 per minute for login, 10 per minute for admin, 3 per hour for password reset
RATE_LIMIT_LOGIN=5 per minute
RATE_LIMIT_ADMIN=10 per minute
RATE_LIMIT_PASSWORD_RESET=3 per hour
# RATE_LIMIT_STORAGE_URI=memory://  # Use redis://localhost:6379 for production

# Account Lockout
# Locks accounts after repeated failed login attempts
# Default: Lock after 5 failed attempts for 15 minutes
ACCOUNT_LOCKOUT_THRESHOLD=5
ACCOUNT_LOCKOUT_DURATION=15  # minutes

# Session Management
# Controls how long user sessions remain active
# Default: 2 hours (120 minutes) of inactivity before session expires
SESSION_TIMEOUT=120  # minutes (2 hours)

# Password Complexity
# Enforces strong password requirements
# Default: Minimum 12 characters with uppercase, lowercase, digit, and special character
PASSWORD_MIN_LENGTH=12
PASSWORD_REQUIRE_UPPERCASE=true
PASSWORD_REQUIRE_LOWERCASE=true
PASSWORD_REQUIRE_DIGIT=true
PASSWORD_REQUIRE_SPECIAL=true

# HTTPS Enforcement
# Redirects all HTTP traffic to HTTPS in production
# Default: true in production, false in development
FORCE_HTTPS=true

# Two-Factor Authentication
# Enables TOTP-based 2FA for enhanced security
# Default: Enabled for all admin users
ENABLE_2FA=true
APP_NAME=Smileys Blog  # Used as issuer name in 2FA QR codes
